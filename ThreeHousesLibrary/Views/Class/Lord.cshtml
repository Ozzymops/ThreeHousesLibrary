@{
    ViewData["Title"] = "Lord";
    Layout = "_ClassLayout";
}

<input type="hidden" id="group" value="2" />

@* Content *@
<div class="jumbotron-fluid">
    <div class="container">
        <div class="container">
            <div class="container">
                <h2>Lord <img src="~/img/data/classes/lord.png" title="Lord" /></h2>
                <p><i>A noble and powerful leader, this class excels at wielding a sword and has a high degree of authority.</i></p>
                <p><i>Only the three house leaders - Edelgard, Dimitri and Claude - can become a Lord.</i></p>
            </div>
            <div class="container" style="margin-top: 20px;">
                <h3>Recommended <a asp-controller="Home" asp-action="Characters">characters</a> for this class</h3>
                <table class="table" style="text-align: center;">
                    <tr>
                        <th scope="col"><a asp-controller="Character" asp-action="Edelgard"><img class="blackEagles" src="~/img/data/characters/edelgard.png" title="Edelgard" /></a></th>
                        <th scope="col"><a asp-controller="Character" asp-action="Dimitri"><img class="blueLions" src="~/img/data/characters/dimitri.png" title="Dimitri" /></a></th>
                        <th scope="col"><a asp-controller="Character" asp-action="Claude"><img class="goldenDeer" src="~/img/data/characters/claude.png" title="Claude" /></a></th>
                    </tr>
                </table>
            </div>
            <div class="container" style="margin-top: 20px;">
                <h3>Certificate Requirements</h3>
                <table class="table" style="text-align: center;">
                    <thead>
                        <tr>
                            <th scope="col"><img src="~/img/data/skills/sword.png" title="Sword" /></th>
                            <th scope="col"><img src="~/img/data/skills/authority.png" title="Authority" /></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row"><b>D+</b></th>
                            <th scope="row"><b>C</b></th>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="container" style="margin-top: 20px;">
                <div class="row">
                    <div class="col-sm">
                        <h3>Class Proficiencies</h3>
                        <table class="table" style="text-align: center;">
                            <tr>
                                <th scope="col"><img src="~/img/data/skills/sword.png" title="Sword" /></th>
                                <th scope="col"><img src="~/img/data/skills/lance.png" title="Lance" /></th>
                                <th scope="col"><img src="~/img/data/skills/authority.png" title="Authority" /></th>
                            </tr>
                        </table>
                    </div>
                    <div class="col-sm">
                        <h3>Class Restrictions</h3>
                        <table class="table" style="text-align: center;">
                            <tr>
                                <th scope="col"><img src="~/img/data/skills/sword.png" title="Sword" /></th>
                                <th scope="col"><img src="~/img/data/skills/lance.png" title="Lance" /></th>
                                <th scope="col"><img src="~/img/data/skills/axe.png" title="Axe" /></th>
                                <th scope="col"><img src="~/img/data/skills/bow.png" title="Bow" /></th>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
            <div class="container" style="margin-top: 20px;">
                <h3>Class <a asp-controller="Home" asp-action="Abilities">Abilities</a></h3>
                <div class="row">
                    <div class="col-sm">
                        <p><img src="~/img/data/abilities/charm.png" title="Charm" style="width: 3vw;" /><b>Charm</b><br /><i>Adjacent allies deal 3 extra damage during combat.</i></p>
                    </div>
                </div>
            </div>
            <div class="container" style="margin-top: 20px;">
                <h3>Class Mastery</h3>
                <div class="row">
                    <div class="col-sm">
                        <p><img src="~/img/data/abilities/resistance-plus-two.png" title="Resistance +2" style="width: 3vw;" /><b>Resistance +2:</b> <i>Increases RES by 2.</i></p>
                    </div>
                    <div class="col-sm">
                        <p><img src="~/img/data/abilities/ca_sword.png" title="Subdue" style="width: 3vw;" /><b>Subdue:</b> <i>An attack that leaves the enemy with 1 HP.</i></p>
                    </div>
                </div>
            </div>
            <div class="container" style="margin-top: 20px;">
                <h3>Class Stats</h3>
                <table class="table" style="text-align: center;">
                    <thead>
                        <tr>
                            <th scope="col"><b>Stat</b></th>
                            <th scope="col">HP</th>
                            <th scope="col">STR</th>
                            <th scope="col">MAG</th>
                            <th scope="col">DEX</th>
                            <th scope="col">SPD</th>
                            <th scope="col">LCK</th>
                            <th scope="col">DEF</th>
                            <th scope="col">RES</th>
                            <th scope="col">CHA</th>
                            <th scope="col">MOV</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row"><b>Base</b></th>
                            <th scope="row">25</th>
                            <th scope="row">9</th>
                            <th scope="row">6</th>
                            <th scope="row">10</th>
                            <th scope="row">10</th>
                            <th scope="row">8</th>
                            <th scope="row">6</th>
                            <th scope="row">3</th>
                            <th scope="row">0</th>
                            <th scope="row">5</th>
                        </tr>
                        <tr>
                            <th scope="row"><b>Growth</b></th>
                            <th scope="row">20</th>
                            <th scope="row">0</th>
                            <th scope="row">0</th>
                            <th scope="row">10</th>
                            <th scope="row">0</th>
                            <th scope="row">0</th>
                            <th scope="row">0</th>
                            <th scope="row">0</th>
                            <th scope="row">10</th>
                            <th scope="row"></th>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>