@{
    ViewData["Title"] = "Wyvern Master";
    Layout = "_ClassLayout";
}

<input type="hidden" id="group" value="0" />

@* Content *@
<div class="jumbotron-fluid">
    <div class="container">
        <div class="container">
            <div class="container">
                <h2>Wyvern Master <img src="~/img/data/classes/wyvern-master.png" title="Wyvern Master" /></h2>
                <p><i>A lord of the skies riding aloft a mighty wyvern.</i></p>
                <p><i>The Wyvern Master is Claude's 1st unique class.</i></p>
            </div>
            <div class="container" style="margin-top: 20px;">
                <h3>Recommended <a asp-controller="Home" asp-action="Characters">characters</a> for this class</h3>
                <table class="table" style="text-align: center;">
                    <tr>
                        <th scope="col"><a asp-controller="Character" asp-action="Claude"><img class="goldenDeer" src="~/img/data/characters/claude-ts.png" title="Claude" /></a></th>
                    </tr>
                </table>
            </div>
            <div class="container" style="margin-top: 20px;">
                <h3>Certificate Requirements</h3>
                <p><i>Claude will automatically swap to this class in Verdant Wind, Part 2, Chapter 12.</i></p>
            </div>
            <div class="container" style="margin-top: 20px;">
                <div class="row">
                    <div class="col-sm">
                        <h3>Class Proficiencies</h3>
                        <table class="table" style="text-align: center;">
                            <tr>
                                <th scope="col"><img src="~/img/data/skills/bow.png" title="Bow" /></th>
                                <th scope="col"><img src="~/img/data/skills/authority.png" title="Authority" /></th>
                                <th scope="col"><img src="~/img/data/skills/flying.png" title="Flying" /></th>
                            </tr>
                        </table>
                    </div>
                    <div class="col-sm">
                        <h3>Class Restrictions</h3>
                        <table class="table" style="text-align: center;">
                            <tr>
                                <th scope="col"><img src="~/img/data/skills/bow.png" title="Bow" /></th>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
            <div class="container" style="margin-top: 20px;">
                <h3>Class <a asp-controller="Home" asp-action="Abilities">Abilities</a></h3>
                <div class="row">
                    <div class="col-sm">
                        <p><img src="~/img/data/abilities/bowfaire.png" title="Bowfaire" style="width: 3vw;" /><b>Bowfaire</b><br /><i>Grants ATK +5 when using a bow.</i></p>
                    </div>
                    <div class="col-sm">
                        <p><img src="~/img/data/abilities/charm.png" title="Charm" style="width: 3vw;" /><b>Charm</b><br /><i>Adjacent allies deal 3 extra damage during combat.</i></p>
                    </div>
                    <div class="col-sm">
                        <p><img src="~/img/data/abilities/canto.png" title="Canto" style="width: 3vw;" /><b>Canto</b><br /><i>Allows unit to move again after completing certain actions, if there is MOV remaining.</i></p>
                    </div>
                </div>
            </div>
            <div class="container" style="margin-top: 20px;">
                <h3>Class Mastery</h3>
                <p><img src="~/img/data/abilities/pomp-and-circumstance.png" title="Pomp & Circumstance" style="width: 3vw;" /><b>Pomp & Circumstance:</b> <i>Grants LCK/CHA +4.</i></p>
            </div>
            <div class="container" style="margin-top: 20px;">
                <h3>Class Stats</h3>
                <table class="table" style="text-align: center;">
                    <thead>
                        <tr>
                            <th scope="col"><b>Stat</b></th>
                            <th scope="col">HP</th>
                            <th scope="col">STR</th>
                            <th scope="col">MAG</th>
                            <th scope="col">DEX</th>
                            <th scope="col">SPD</th>
                            <th scope="col">LCK</th>
                            <th scope="col">DEF</th>
                            <th scope="col">RES</th>
                            <th scope="col">CHA</th>
                            <th scope="col">MOV</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row"><b>Base</b></th>
                            <th scope="row">30</th>
                            <th scope="row">17</th>
                            <th scope="row">9</th>
                            <th scope="row">13</th>
                            <th scope="row">19</th>
                            <th scope="row">11</th>
                            <th scope="row">14</th>
                            <th scope="row">11</th>
                            <th scope="row">0</th>
                            <th scope="row">7</th>
                        </tr>
                        <tr>
                            <th scope="row"><b>Growth</b></th>
                            <th scope="row">20</th>
                            <th scope="row">10</th>
                            <th scope="row">0</th>
                            <th scope="row">0</th>
                            <th scope="row">5</th>
                            <th scope="row">0</th>
                            <th scope="row">5</th>
                            <th scope="row">0</th>
                            <th scope="row">10</th>
                            <th scope="row"></th>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>