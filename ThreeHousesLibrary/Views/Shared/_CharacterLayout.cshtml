                    <ul class="list-item collapse list-unstyled" id="churchOfSeiros">
                        <li><a asp-controller="Character" asp-action="Rhea">Rhea</a></li>
                        <li><a asp-controller="Character" asp-action="Manuela">Manuela Cassagranda</a></li>
                        <li><a asp-controller="Character" asp-action="Hanneman">Hanneman von Essar</a></li>
                        <li><a asp-controller="Character" asp-action="Seteth">Seteth</a></li>
                        <li><a asp-controller="Character" asp-action="Flayn">Flayn</a></li>
                        <li><a asp-controller="Character" asp-action="Cyril">Cyril</a></li>
                        <li><a asp-controller="Character" asp-action="Catherine">Cassandra Rubens Charon</a></li>
                        <li><a asp-controller="Character" asp-action="Alois">Alois Rangeld</a></li>
                        <li><a asp-controller="Character" asp-action="Shamir">Shamir Nevrand</a></li>
                    </ul>
