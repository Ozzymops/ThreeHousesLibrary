                        <li><a asp-controller="Character" asp-action="Bernadetta">Bernadetta von Varley</a></li>
                        <li><a asp-controller="Character" asp-action="Caspar">Caspar von Bergliez</a></li>
                        <li><a asp-controller="Character" asp-action="Petra">Petra Macneary</a></li>
                        <li><a asp-controller="Character" asp-action="Linhardt">Linhardt von Hevring</a></li>
                        <li><a asp-controller="Character" asp-action="Jeritza">Jeritza von Hrym</a></li>
                    </ul>
                    <a href="#blueLions" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Blue Lions</a>
                    <ul class="list-item collapse list-unstyled" id="blueLions">
                        <li><a asp-controller="Character" asp-action="Dimitri">Dimitri Alexandre Blaiddyd</a></li>
                        <li><a asp-controller="Character" asp-action="Dedue">Dedue Molinaro</a></li>
                        <li><a asp-controller="Character" asp-action="Felix">Felix Hugo Fraldarius</a></li>
                        <li><a asp-controller="Character" asp-action="Mercedes">Mercedes von Martritz</a></li>
