                        <li><a asp-controller="Character" asp-action="Byleth">Byleth Eisner</a></li>
                        <li><a asp-controller="Character" asp-action="Jeralt">Jeralt Eisner</a></li>
                        <li><a asp-controller="Character" asp-action="Sothis">Sothis</a></li>
                        <li><a asp-controller="Character" asp-action="Anna">Anna</a></li>
                    </ul>
                    <a href="#blackEagles" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Black Eagles</a>
                    <ul class="list-item collapse list-unstyled" id="blackEagles">
                        <li><a asp-controller="Character" asp-action="Edelgard">Edelgard von Hresvelg</a></li>
                        <li><a asp-controller="Character" asp-action="Hubert">Hubert von Vestra</a></li>
                        <li><a asp-controller="Character" asp-action="Dorothea">Dorothea Arnault</a></li>
